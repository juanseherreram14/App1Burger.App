<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App1Burger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:App1Burger.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="BurgerListPage"
        ContentTemplate="{DataTemplate views:BurgerListPage}"
        Route="BurgerListPage" />

    <ShellContent
        Title="BurgerItemPage"
        ContentTemplate="{DataTemplate views:BurgerItemPage}"
        Route="BurgerItemPage" />

</Shell>
